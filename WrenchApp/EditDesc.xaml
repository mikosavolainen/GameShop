<Window x:Class="WrenchApp.EditDesc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrenchApp"
        mc:Ignorable="d"
        Title="EditDesc" Height="300" Width="500">
    <Grid Background="#252525">
        <StackPanel Margin="10">
            <RichTextBox x:Name="InputTextBox" Height="200" Background="#202020" BorderBrush="#353535" Foreground="White"></RichTextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button Cursor="Hand" Click="CancelButton_Click" Content="Cancel" Margin="10 0" FontSize="20"/>
                <Button Cursor="Hand" Click="OkButton_Click" Content="Submit" Margin="10 0" FontSize="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
