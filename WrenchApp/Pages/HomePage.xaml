<Page x:Class="WrenchApp.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WrenchApp.Pages"
      mc:Ignorable="d" 

      >

    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="540"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 0 150" HorizontalAlignment="Center">
                <Label
                    Content="1 200 500+ apps and games of any kind"
                    FontSize="45"
                    Foreground="White"/>
                
                <Label
                    Content="Search"
                    Foreground="White"
                    FontSize="20"/>

                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="25" Background="White">
                        <TextBox
                            VerticalContentAlignment="Center"
                            Padding="10 0 0 0"
                            FontSize="25"
                            Height="50"
                            Width="600"
                            Background="Transparent"
                            Foreground="Black"
                            BorderBrush="Transparent"/>
                    </Border>

                    <Border Margin="20 0" CornerRadius="25" Background="Purple">
                        <Button
                            Background="Transparent"
                            Content=">"
                            Foreground="White"
                            Padding="30 0"
                            FontSize="20"
                            BorderBrush="Transparent"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <TextBlock 
                Grid.Row="0" 
                Foreground="White" 
                Text="Featured" 
                FontSize="20" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center" 
                Width="1200"/>

            <Grid Grid.Row="1" Width="1200" Height="500" Margin="0 0 0 200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="#303030">
                    <Image Source="/WrenchApp;component/Images/placeholder.png" Width="600" Height="300" Stretch="UniformToFill"/>
                    <Label Content="Title" FontSize="30" Foreground="White" Padding="15 7 0 0"/>
                    <TextBlock Text="Description" Width="600" Height="110" Padding="15 10 0 0" Foreground="White" FontSize="20" TextWrapping="WrapWithOverflow"/>
                    <TextBlock Text="00.00€" Foreground="White" FontSize="23" Padding="15 0 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Background="#303030">
                    <Image Source="/WrenchApp;component/Images/placeholder.png" Width="300" Height="150" Stretch="UniformToFill"/>
                    <Label Content="Title" FontSize="15" Foreground="White" Padding="7.5 3.5 0 0"/>
                    <TextBlock Text="Description" Width="300" Height="55" Padding="7.5 5 0 0" Foreground="White" FontSize="10" TextWrapping="WrapWithOverflow"/>
                    <TextBlock Text="00.00€" Foreground="White" FontSize="11.5" Padding="7.5 0 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Background="#303030">
                    <Image Source="/WrenchApp;component/Images/placeholder.png" Width="300" Height="150" Stretch="UniformToFill"/>
                    <Label Content="Title" FontSize="15" Foreground="White" Padding="7.5 3.5 0 0"/>
                    <TextBlock Text="Description" Width="300" Height="55" Padding="7.5 5 0 0" Foreground="White" FontSize="10" TextWrapping="WrapWithOverflow"/>
                    <TextBlock Text="00.00€" Foreground="White" FontSize="11.5" Padding="7.5 0 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Background="#303030">
                    <Image Source="/WrenchApp;component/Images/placeholder.png" Width="300" Height="150" Stretch="UniformToFill"/>
                    <Label Content="Title" FontSize="15" Foreground="White" Padding="7.5 3.5 0 0"/>
                    <TextBlock Text="Description" Width="300" Height="55" Padding="7.5 5 0 0" Foreground="White" FontSize="10" TextWrapping="WrapWithOverflow"/>
                    <TextBlock Text="00.00€" Foreground="White" FontSize="11.5" Padding="7.5 0 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Background="#303030">
                    <Image Source="/WrenchApp;component/Images/placeholder.png" Width="300" Height="150" Stretch="UniformToFill"/>
                    <Label Content="Title" FontSize="15" Foreground="White" Padding="7.5 3.5 0 0"/>
                    <TextBlock Text="Description" Width="300" Height="55" Padding="7.5 5 0 0" Foreground="White" FontSize="10" TextWrapping="WrapWithOverflow"/>
                    <TextBlock Text="00.00€" Foreground="White" FontSize="11.5" Padding="7.5 0 0 0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
